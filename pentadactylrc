set scrollsteps=1
set scrolltime=0
set go+=n
set editor=vi
set hintkeys=asdfghjkl;zxcvbnm
nmap -builtin d D
nmap -builtin D d
nmap -builtin <C-h> <C-p>
nmap -builtin <C-l> <C-n>
nmap -builtin ; :
nmap -builtin : ;
nmap -builtin <BS> <Nop> 

" Zoom In(Enlarge)
nmap -builtin zh ZM
nmap -builtin zj ZI
" Zoom out(Shrink)
nmap -builtin zl ZR
nmap -builtin zk ZO

colorscheme solarized-dark
